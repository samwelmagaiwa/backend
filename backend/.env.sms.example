# SMS Service Configuration
# Add these to your .env file

# SMS Provider Settings (Kilakona)
SMS_ENABLED=true
SMS_API_URL=https://messaging.kilakona.co.tz/api/v1/vendor/message/send
SMS_API_KEY=your_api_key_here
SMS_API_SECRET=your_api_secret_here
SMS_SENDER_ID=MLG

# Delivery report callback (must be publicly reachable by Kilakona)
# Example: https://your-domain.com/api/sms/delivery-report
SMS_DELIVERY_REPORT_URL=

# Optional: protect the delivery report endpoint with a shared token
# (Send as header X-Webhook-Token or query param ?token=...)
SMS_DELIVERY_REPORT_TOKEN=

# Service Settings
SMS_TIMEOUT=30
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=60

# Rate Limiting
SMS_RATE_LIMIT_PER_HOUR=5
SMS_MAX_BULK_SIZE=100
SMS_BULK_DELAY=0.1

# Logging
SMS_LOGGING_ENABLED=true
SMS_LOG_SUCCESSFUL=true
SMS_LOG_FAILED=true
SMS_LOG_LEVEL=info

# Queue Settings
SMS_QUEUE_ENABLED=true
SMS_QUEUE_NAME=sms
SMS_MAX_TRIES=3

# Development/Testing
SMS_FAKE_SEND=false
SMS_TEST_NUMBERS=255700123456,255600987654
SMS_LOG_TO_FILE=false
SMS_MOCK_RESPONSES=false

# Emergency Settings
SMS_ADMIN_PHONE=255700123456
SMS_FALLBACK_ENABLED=false

# Alternative SMS Providers (uncomment to use)
# For Vodacom Tanzania
# SMS_API_URL=https://api.vodacom.co.tz/sms/v1/send
# For Airtel Tanzania  
# SMS_API_URL=https://api.airtel.co.tz/messaging/sms/send
# For Tigo Tanzania
# SMS_API_URL=https://api.tigo.co.tz/v1/sms/send